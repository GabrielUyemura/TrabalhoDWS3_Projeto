{% extends "templates/base.html" %}

{% block content %}

  <ol class="breadcrumb mb-2">
    <li class="breadcrumb-item active">{{title}}</li>
  </ol>
  <div class="row">
    <div class="col-xl-12">

      <div class="card-header">
        Manutenção de Matrículas
      </div>

      <div class="card-body">
        <div class="">
          <div style="margin-bottom: 15px;">
            <a href="/matriculas/insertMatricula" class="btn btn-primary">
              Inserir Nova Matrícula
            </a>
          </div>

          <div style="background-color: #f8f9fa">
            <table id="tabMatriculas" class="display" style="width:100%">
              <thead>
                <tr>
                  <th>Ação</th>
                  <th>Data da Matrícula</th>
                  <th>Disciplina</th>
                  <th>Aluno</th>
                </tr>
              </thead>
              <tbody>
                {% for matricula in data %}
                  <tr>
                    <td>
                      <a href="/matriculas/viewMatricula/{{ matricula.idDisciplinaAluno }}" title="Visualizar">
                        <i class="fas fa-search"></i>
                      </a>
                      <a href="/matriculas/updateMatricula/{{ matricula.idDisciplinaAluno }}" title="Atualizar" style="margin-left: 10px;">
                        <i class="fas fa-pencil-alt"></i>
                      </a>
                    </td>
                    <td>{{ matricula.dataMatricula }}</td>
                    <td>{{ matricula.Disciplina.tituloDisciplina }}</td>
                    <td>{{ matricula.Aluno.titulo }}</td>
                  </tr>
                {% endfor %}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    window.onload = function () {
      windowOnLoad();
      const errorMsg = "{{ erro }}";
      if (errorMsg) 
        alert(`Erro: ${errorMsg}`);
      
      new DataTable('#tabMatriculas');

      // Format dates in the table
      document
        .querySelectorAll('#tabMatriculas tbody tr')
        .forEach(row => {
          const dateCell = row.cells[1];
          const originalDate = dateCell
            .textContent
            .trim();

          if (/^\d{4}-\d{2}-\d{2}$/.test(originalDate)) {
            const [year, month, day] = originalDate.split('-');
            dateCell.textContent = `${day}/${month}/${year}`;
          }
        });
    };
  </script>

{% endblock %}