{% extends "templates/base.html" %}

{% block content %}

  <ol class="breadcrumb mb-2">
    <li class="breadcrumb-item active">{{ title }}</li>
  </ol>
  <div class="row">
    <div class="col-xl-12">

      <div class="card-header">
        Gerenciamento de Cursos
      </div>

      <div class="card-body">
        <div class="">
          <div style="margin-bottom: 15px;">
            <a href="/curso/insertCurso" class="btn btn-primary">
              Cadastrar Curso
            </a>
          </div>

          <div style="background-color: #f8f9fa">
            <table id="tabCurso" class="display" style="width:100%">
              <thead>
                <tr>
                  <th>Ação</th>
                  <th>Título</th>
                  <th>Data de Abertura</th>
                  <th>Carga Horária</th>
                </tr>
              </thead>
              <tbody>
                {% for reg in data %}
                  <tr>
                    <td>
                      {# Link para visualização dos dados #}
                      <a href="/curso/viewCurso/{{ reg.idcurso }}" title="Visualizar">
                        <i class="fas fa-search"></i>
                      </a>

                      {# Link para atualização dos dados #}
                      <a href="/curso/updateCurso/{{ reg.idcurso }}" title="Atualizar" style="margin-left: 10px;">
                        <i class="fas fa-pencil-alt"></i>
                      </a>
                    </td>
                    <td>{{ reg.titulo }}</td>
                    <td>{{ reg.dataabertura }}</td>
                    <td>{{ reg.cargahoraria }}</td>
                  </tr>
                {% endfor %}
              </tbody>
            </table>
          </div>

        </div>
      </div>
    </div>
  </div>

  <script>

    window.onload = function () {
      windowOnLoad();
      // Caso tenha dado erro no servidor frontEnd, ele será mostrado aqui.
      const localErro = "{{ erro }}";
      if (localErro != "") {
        alert("[vwCurso|onload] Servidor retornou o erro: " + localErro);
      }

      new DataTable('#tabCurso');

      // Formatar datas no padrão dd/mm/yyyy
      document
        .querySelectorAll('#tabCurso tbody tr')
        .forEach(row => {
          const dateCell = row.cells[2]; // A célula da data de abertura (índice 2)
          const originalDate = dateCell.textContent.trim();

          if (originalDate) {
            // Parse a string da data ISO 8601
            const date = new Date(originalDate);

            // Verifica se a data é válida
            if (!isNaN(date)) {
              const day = String(date.getDate()).padStart(2, '0');
              const month = String(date.getMonth() + 1).padStart(2, '0');
              const year = date.getFullYear();

              // Atualiza a célula com a data no formato dd/mm/yyyy
              dateCell.textContent = `${day}/${month}/${year}`;
            }
          }
        });
    };
  </script>

{% endblock %}
